<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="css/header.css">

    <!-- importing bootstrap and other things which are used everywhere: -->
    <%- include('../partials/head'); %>

    <title>Employee</title>
</head>

<header>
    <%- include('../partials/header'); %>
</header>

<body class="">
    <div class="container-fluid MyContent">

        <div class="row" style="height: 10px;"></div>

        <div class="col">

            <button type="button"
                style="background-color: #1a75ff; color: white; border:none; border-radius: 5px; padding: 5px; width:100px">
                General</button>
            <button type="button"
                style="background-color: white; margin: auto 40px; border:1.5px solid #1a75ff; border-radius: 5px; padding: 5px; width:100px">
                Security</button>
            <button type="button"
                style="background-color: white; border:1.5px solid #1a75ff; border-radius: 5px; padding: 5px; width:100px">
                History</button>
            <!-- <h3>Employee Details</h3> -->
            <!-- <br><br><br><br> -->
            <br><br>

                <div class="container-fluid" style="padding: 10px;">
                    <div class="row">
                        <div class="col card shadow" style="padding:1.5%; padding-top: 8px;">
                            
                            <span class="card flex-row flex-wrap" style="height: 260px; padding-right: inherit; min-width: 26%;">
                                <img class="my-auto" src="/images/profile.png" alt="" height="80px" width="95px">
                                <div class="card-block p-2">
                                    <p class="">
                                        <h3 class="mx-auto d-inline"><%= employee.name %></h3>
                                        <strong class="d-inline alert alert-warning p-1 float-right" style="margin-left: 20px; color: brown;"> EID: <%= employee.EID %> </strong>
                                    </p>
                                    
                                    <% 
                                        let desigString = null;
                                        if(specialDesignation != null)
                                            desigString = specialDesignation.designation 
                                        if(specialDesignation != null && specialDesignation.designation == 'Dean')
                                            desigString = desigString + ", " + specialDesignation.type_or_dept;
                                    %>
                                    <% if(specialDesignation != null ) %>
                                        <p class="card-subtitle"><%= desigString %></p>
                        
                                    <p class="my-0">
                                        <%= employee.deptName %>
                                    </p> 
                                    <div>Employee ID : <%= employee.EID %></div>
                                    <div>Department Name : <%= employee.deptName %></div>
                                    <div>Leaves Remaining : <%= employee.leavesRemaining %></div>
                                    <div>Penalty Leaves : <%= employee.penaltyLeaves %></div>
                                </div>

                            </span>

                        </div>
                    </div>
            </div>
            <!-- <% let str="EID :" + employee.EID + "\n" + "name :" + employee.name + "\n" + "deptName :" + employee.deptName
            + "\n" + "leavesRemaining :" + employee.leavesRemaining + "\n" + "penaltyLeaves :" + employee.penaltyLeaves
            + "\n" ; %> -->
            <!-- <div>
                <pre> <%= str %> </pre>
            </div> -->


        </div>

    </div>


</body>

</html>